.container(ng-controller="nmSettingCtrl")
    div(class="spacer inside-page")
        .row    
            div(class="col-sm-5 col-sm-offset-1")
                div(class="panel panel-default")
                    div(class="panel-heading") 
                        h4 States
                    div(class="panel-body")
                        .row   
                            .col-sm-8
                                input(class="form-control", type="text", ng-model="formData.state")
                            .col-sm-4
                                input(type="submit", class="btn btn-default", value="Save" ,ng-click="addState()")
                                       
                            
                        .table-responsive    
                            table(class="table")
                                thead
                                    tr
                                        th No 
                                        th States
                                        
                                tbody
                                    tr(ng-repeat="st in states")
                                        td {{st.id}}
                                        td {{st.State}}
                                        td
                                            label
                                                a(href="#" ,ng-click="removeState(st)")
                                                    i(class="fa fa-close")    
                    div(class="panel-footer")
             div(class="col-sm-5 ")
                div(class="panel panel-default")
                    div(class="panel-heading") 
                        h4 Category
                    div(class="panel-body")
                        p   Below are the list of states
                            a(href="/ads", class="btn btn-default") here       
                            
                        .table-responsive    
                            table(class="table")
                                thead
                                    tr
                                        th No 
                                        th Category
                                        
                                tbody
                                    tr(ng-repeat="cat in categories")
                                        td {{cat.id}}
                                        td {{cat.Name}}
                                        td
                                            label
                                                a(href="#" ,ng-click="removeCategory(cat)")
                                                    i(class="fa fa-close")  
                                        td 
                                            div(ng-init="categoryItems = categoryChange(cat.id)")
                                                ul(class="list-unstyled listing")
                                                    li(ng-repeat="item in categoryItems")   
                                                        {{item.Item}}
                                                        label
                                                            a(href="#" ,ng-click="removeCategoryItem(item)")
                                                                i(class="fa fa-close")  


                    div(class="panel-footer")
        .row
            div(class="col-sm-5 col-sm-offset-1")
                 div(class="panel panel-default")
                    div(class="panel-heading") 
                        h4 Category 
                    div(class="panel-body")  
                         .row   
                            .col-sm-10
                                input(class="form-control", type="text", ng-model="formData.category")
                            .col-sm-10
                                input(type="text", class="form-control", name="categoryImageUrl", placeholder="image Url", ng-model="formData.categoryImageUrl")
                            .col-sm-4
                                input(type="submit", class="btn btn-default", value="Save" ,ng-click="addCategory()")

            div(class="col-sm-5 col-sm-offset-1")
                 div(class="panel panel-default")
                    div(class="panel-heading") 
                        h4 Category Items
                    div(class="panel-body")  
                         .row   
                            .col-sm-10
                                select(class="form-control",
                                name="categoryItemCategory", 
                                ng-model="formData.categoryItemCategory",
                                ng-options="category.id as category.Name for category in categories"
                                required)
                            .col-sm-10
                                input(class="form-control", type="text", ng-model="formData.categoryItem")    
                            .div(class="col-sm-4 col-sm-offset-8")
                                input(type="submit", class="btn btn-default", value="Save" ,ng-click="addCategoryItem()")


        .row    
            div(class="col-sm-5 col-sm-offset-1")
                div(class="panel panel-default")
                    div(class="panel-heading") 
                        h4 Sponsored Ads
                    div(class="panel-body")
                        
                        .table-responsive    
                            table(class="table")
                                thead
                                    tr
                                        
                                        th AdsUrl
                                        th Redirect to
                                        th Customer
                                        th Height
                                        th Width
                                        th Expires
                                        th
                                tbody
                                    tr(ng-repeat="st in ads")
                                        
                                        td 
                                            img(src="{{st.AdsUrl}}", class="thumb")
                                        td 
                                            a(href="{{ st.RedirectUrl}}") Here
                                        td {{st.Customer}}
                                        td {{st.Height}}
                                        td {{st.Width}}
                                        td {{ st.Expires}}
                                        td
                                            label
                                                a(href="#" ,ng-click="removeAd(st)")
                                                    i(class="fa fa-close")             
            div(class="col-sm-5 ")
                div(class="panel panel-default")
                        div(class="panel-heading") 
                            h4 Sponsored Ads
                        div(class="panel-body")
                        
                            .table-responsive    
                                table(class="table")
                                    thead
                                        th Add Sponsored Ad
                                    tbody
                                        tr
                                            td 
                                                input(type="text", class="form-control", name="AdsUrl", placeholder="Ads Url", ng-model="formData.AdsUrl")
                                        tr    
                                            td 
                                                input(type="text", class="form-control", name="RedirectUrl", placeholder="RedirectUrl", ng-model="formData.RedirectUrl")
                                        tr        
                                            td 
                                                input(type="text", class="form-control", name="Customer", placeholder="Customer", ng-model="formData.Customer")
                                        tr    
                                            td 
                                                input(type="number", class="form-control", name="Height", placeholder="Height", ng-model="formData.Height")    
                                        tr    
                                            td 
                                                input(type="number", class="form-control", name="Width", placeholder="Width", ng-model="formData.Width")     
                                        tr    
                                            td 
                                                input(type="number", class="form-control", name="Expires", placeholder="Expires", ng-model="formData.Expires")     
                                                
                                        tr    
                                            td 
                                                input(type="submit", class="btn btn-default pull-right", value="Save" ,ng-click="addSponsoredAd()")
                      
                                          